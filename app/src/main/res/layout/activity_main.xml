<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/salmon"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recetas del mundo"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/imgBolivia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/bolivia"
            android:layout_marginTop="20dp"
            android:contentDescription="Bolivia"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgIndia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/india"
            android:layout_marginTop="20dp"
            android:contentDescription="India"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgItaly"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/italy"
            android:layout_marginTop="20dp"
            android:contentDescription="Italy"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgJapan"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/japan"
            android:layout_marginTop="20dp"
            android:contentDescription="Japan"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgMexico"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/mexico"
            android:layout_marginTop="20dp"
            android:contentDescription="Mexico"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />
    </LinearLayout>
</ScrollView>
